{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "src/NewBackend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/NewBackend/ContactForm/SendEmail.mjs",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "/src/NewBackend/server.js" 
    },
    {
      "src": "/send-enquiry",      
      "dest": "/src/NewBackend/ContactForm/SendEmail.mjs" 
    },
    {
      "src": "/(.*)",  
      "dest": "/index.html",       
      "headers": {
        "Accept": "text/html"
      }
    }
  ]
}

