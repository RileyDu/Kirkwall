{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "src/Backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/checkThresholds.js",
      "use": "@vercel/node",
      "config": { "runtime": "nodejs16.x" }
    }
  ],
  "rewrites": [
    {
      "source": "/send-sms",
      "destination": "src/Backend/server.js"
    },
    {
      "source": "/send-email",
      "destination": "src/Backend/server.js"
    },
    {
      "source": "/api/set-thresholds",
      "destination": "src/Backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "crons": [
    {
      "path": "/api/checkThresholds",
      "schedule": "*/5 * * * *"
    }
  ]
}
